# ===========================================
# TERRAFORM VARIABLES EXAMPLE
# ===========================================
# Copia este archivo como terraform.tfvars y rellena con tus valores reales

# Configuración del proyecto
project_name = "data-project-3"

# Configuración AWS
aws_region        = "eu-central-1"
aws_account_id    = "YOUR_AWS_ACCOUNT_ID"
db_name           = "ecommerce"
db_username       = "ecommerceuser"
db_password       = "YOUR_SECURE_DB_PASSWORD"  # Usa una contraseña fuerte
datastream_username = "datastream"
datastream_password = "YOUR_DATASTREAM_PASSWORD"  # Usa una contraseña fuerte

# Configuración GCP
gcp_project_id = "YOUR_GCP_PROJECT_ID"
gcp_region     = "europe-west1"

# BigQuery
bigquery_dataset_id       = "ecommerce_analytics"
bigquery_dataset_location = "EU"

# Datastream
datastream_display_name = "ecommerce-rds-to-bq"

# Flask App
flask_app_port = 8080
flask_app_image = "europe-west1-docker.pkg.dev/YOUR_GCP_PROJECT_ID/data-project-3-repo/data-project-3-flask-app:latest"

# INSTRUCCIONES:
# 1. Copia este archivo: cp terraform.tfvars.example terraform.tfvars
# 2. Edita terraform.tfvars con tus valores reales
# 3. NUNCA subas terraform.tfvars a Git (ya está en .gitignore)